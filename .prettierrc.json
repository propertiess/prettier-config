{
  "tabWidth": 2,
  "printWidth": 80,
  "arrowParens": "avoid",
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": ".*rc",
      "options": {
        "parser": "json"
      }
    }
  ],
  "semi": true,
  "trailingComma": "none",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-multiline-arrays"],
  "multilineArraysWrapThreshold": 2,
  "importOrderSeparation": true,
  "importOrder": [
    "^(react|next|react-router-dom|react-dom(.*))$",
    "<THIRD_PARTY_MODULES>",
    "^@/(components|app/(.*)/components(.*))$",
    "^@/(hooks|store/hooks|app/(.*)/hooks(.*))$",
    "^@/store(.*)$",
    "^@/(contexts|app/(.*)/contexts(.*))$",
    "^@/(services|app/(.*)/services(.*))$",
    "^@/(types|app/(.*)/types(.*))$",
    "^@/(utils|app/(.*)/utils(.*))$",
    "^@/layouts?(.*)$",
    "^[./]",
    "^(.*)(sass|css|scss)$"
  ],
  "importOrderSortSpecifiers": true
}